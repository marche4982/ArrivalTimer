<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_searchScreen_top"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.youyou.arrivaltimer.MainActivity">

    <LinearLayout
        android:id="@+id/layout_searchScreen_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/editText_searchScreen_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Hello World!"/>
        <ImageButton
            android:id="@+id/imageButton_searchScreen_from"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="null"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/icon_search" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_searchScreen_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/editText_searchScreen_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Hello World!"/>
        <ImageButton
            android:id="@+id/imageButton_searchScreen_to"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="null"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/icon_search" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_searchScreen_transportation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/radioGroup_searchScreen_transportation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton_searchScreen_transportation_walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/transportation_walk" />

            <RadioButton
                android:id="@+id/radioButton_searchScreen_transportation_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/transportation_car" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_searchScreen_searchTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_searchScreen_searchTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_searchScreen_searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_searchScreen_searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_search" />
    </LinearLayout>

</LinearLayout>
